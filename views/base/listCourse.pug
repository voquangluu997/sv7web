// start courses section
#cources.offset
  .fixed-background
    .row.dark.text-center
      .col-12
        h3.heading=header
        .heading-underline
      .col-12.mb-5
        form.search-form(action='/course/' + field +'/search',method="GET")
          input.search-input(type='text', name='q', placeholder='Tìm kiếm..')
          button(type="submit" )
            i.fas.fa-search

      if message!=''
        h3.col-12.text-center=message
      table.table.container.col-12.col-md-8.text-center
        each l in list
          if list
            tr
              td.text-white.text-center=l.name.toUpperCase()
              td
                .d-flex.align-items-center.justify-content-center
                  a(href=l.url ).btn.btn-sm.btn-danger.text-nowrap.text-white Xem full
                
                  
