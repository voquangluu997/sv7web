-var num = 1
if field
  h2.header-list-img.alert.alert-danger.text-center=header
.container
  .row
    if field
      each f in field
        .card.col-12.col-md-4.pt-5(style='width: 40rem;')
          div
            a(data-fancybox='gallery', href=f.url)
              img.card-img-top(src=f.url,style='width: 300px; height :  500px;' ) 
            .text-center
              h5.pt-2.text-center='áº¢nh ' + num++

.col-12.container.d-flex.justify-content-center.margin-bottom-pagination
  nav(aria-label='Page navigation')
    ul.pagination
      li.page-item
        if page ==='1'
          a.page-link(href='#') Previous
        else 
          a.page-link(href='/dethi/cuoiky/'+sub + '/' +(Number(page)-1).toString()) Previous
      li.page-item
        a.page-link.active.bg-primary.text-light(href='dethi/cc/'+sub + '/' +page)=page
      li.page-item
        a.page-link(href='#') of
      li.page-item
        a.page-link(href='/dethi/cuoiky/'+sub + '/' +totalPage)=totalPage
      li.page-item
        if Number(page) === Number( totalPage )
          a.page-link(href='#') Next
        else
          a.page-link(href='/dethi/cuoiky/'+sub + '/' +(Number(page)+1).toString()) Next

