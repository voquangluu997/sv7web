doctype html
head
  title
  meta(charset='utf-8')
  meta(name='viewport', content='width=device-width, initial-scale=1')
  link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css')
  link(rel='stylesheet', type='text/css', href='../../../../style.css')
  script(src='https://kit.fontawesome.com/443ff89b73.js', crossorigin='anonymous')

#cources.offset
  .fixed-background
    .row.dark.text-center
      .col-12
        h3.heading  CRUD USER 
        .heading-underline
      .col-12.mb-5
        form.search-form(action='/CRUD/user/search',method="GET")
          input.search-input(type='text', name='q', placeholder='Tìm kiếm..')
          button(type="submit" )
            i.fas.fa-search
        

      if message!=''
        h3.col-12.text-center=message
      table.table.container-fluid
        tr
          td
            a(href='/CRUD/insert').btn.btn-success.btn-sm Add new user    
        tr 
          td.text-white ID
          td.text-white Name
          td.text-white Email
          td.text-white Avatar
          td.text-white Gender 
          td.text-white Đóng góp
        each i in item
          if item 
            tr
              td.text-white=i._id
              td.text-white=i.name
              td.text-white=i.email
              td.text-white=i.avatar
              td.text-white=i.gender
              td.text-white=i.donggop
              td
                a(href='/CRUD/edit/'+i._id).btn.btn-sm.btn-warning.mr-2 Edit
                a(href='/CRUD/delete/'+i._id).btn.btn-sm.btn-danger Delete        
        
  