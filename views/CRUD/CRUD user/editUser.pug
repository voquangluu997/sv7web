doctype html
head
  title
  meta(charset='utf-8')
  meta(name='viewport', content='width=device-width, initial-scale=1')
  link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css')
  link(rel='stylesheet', type='text/css', href='../../../../style.css')
  script(src='https://kit.fontawesome.com/443ff89b73.js', crossorigin='anonymous')

.container.col-5
  h1.text-center Edit user
  form( action = "/CRUD/editUser/"+item._id,  method = "post" )
    .form-group
      label(for='id') ID
      input#id.form-control(type='text', name='id', placeholder='Enter id' value=item._id)
      label(for='name') Name
      input#name.form-control(type='text',  name='name', placeholder='Enter name', value=item.name)
      
      label(for='email') email
      input#email.form-control(type='text', name='email' placeholder='Enter email', value=item.email)
      label(for='password') password
      input#password.form-control(type='text', name='password' placeholder='Enter password', value=item.password)
      label(for='avatar') avatar
      input#avatar.form-control(avatar='text', name='avatar' placeholder='Enter avatar', value=item.avatar)
      label(for='gender') gender
      input#gender.form-control(gender='text', name='gender' placeholder='Enter gender', value=item.gender)
      label(for='donggop') donggop
      input#donggop.form-control(donggop='text', name='donggop' placeholder='Enter donggop', value=item.donggop)
      label(for='noti') noti
      input#noti.form-control(noti='text', name='noti' placeholder='Enter noti', value=item.noti)
      label(for='admin') admin
      input#admin.form-control(admin='text', name='admin' placeholder='Enter admin', value=item.admin)
      label(for='rank') rank
      input#rank.form-control(rank='text', name='rank' placeholder='Enter rank', value=item.rank)
      
    button.btn.btn-primary(type='submit') Submit
