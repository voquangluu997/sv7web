script.
  var texts = ['__Chào em.. Anh đứng đây từ chiều chỉ để nói với em rằng...','__Em có muốn quãng thời gian sinh viên còn lại..','__Được nắm tay ai đó, cùng đi ăn, cùng xem phim, cùng hú hí với nhau mọi điều về thế giới không?','Hãy để anh trải nghiệm những điều đó cùng em nhé...','❤️❤️❤️❤️❤️❤️❤️❤️❤️❤️❤️❤️❤❤️❤️❤️❤️❤️❤️❤️❤️x3000 trái tim!!'];
  var count =0;
  var index =0;

  var currentText ='';
  var letter = '';
  var displayText ='';

  (function type(){
    
    if(count === texts.length){
    count=0;
    }
    currentText+=texts[count];
     letter = currentText.slice(0,++index);
    document.querySelector('.typing').textContent = letter;
    if(letter.length === currentText.length){
    count++;
    displayText += letter+'\n';
    if(count==texts.length) displayText='';
    document.querySelector('.displayText').textContent = displayText;
    index=0;
    }
    setTimeout(type,100);
     currentText='';
  }());
    


  var NoBtn = function(){
  var rInteract = Math.floor(Math.random() * 101);
  if(rInteract <= 60){
  move();
  }else{
  replace();
  }
  }
  var replace = function(){
  var no_btn = document.getElementById("no");
  var yes_btn = document.getElementById("yes");
  var styles_yes = window.getComputedStyle(yes_btn);
  var top_yes = styles_yes.getPropertyValue("top");
  var left_yes = styles_yes.getPropertyValue("left");
  var temp_top = top_yes;
  var temp_left = left_yes;
  var styles_no = window.getComputedStyle(no_btn);
  var top_no = styles_no.getPropertyValue("top");
  var left_no = styles_no.getPropertyValue("left");
  yes_btn.style.top = top_no;
  yes_btn.style.left = left_no;
  no_btn.style.top = temp_top;
  no_btn.style.left = temp_left;
  }
  var move = function(){
  var no_btn = document.getElementById("no");
  var yes_btn = document.getElementById("yes");
  no_btn.style.top = Math.floor(Math.random() * 400);
  no_btn.style.left = Math.floor(Math.random() * 800);
  }
